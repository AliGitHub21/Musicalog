@page
@model IndexModel
@{
    ViewData["Title"] = "Albums List";
}
<!DOCTYPE html> 
<html lang="en">   
  <head>   
      <meta charset="utf-8">
      <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <!-- Bootstrap core JavaScript-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap4.min.js"></script>
  </head>   
  <body>
    <div class="container row p-0 m-0">
        <div class="col-10">
            <h2 class="text-info">Album List</h2>
        </div>
        <div class="col-2">
            <a class="btn btn-outline-info form-control" asp-page="./Create"><i class="fa fa-plus"></i> Create Album</a>
        </div>
        <div class="col-12 border p-3 mt-3">
            <form method="post">
                @if (Model.AllAlbumsAsync.Any())
                {
                    <table class="table table-striped table-bordered" id="dataTable" >
                        <thead>
                        <tr >
                            <th>
                                <label asp-for="AllAlbumsAsync.FirstOrDefault().Name"></label>
                            </th>
                            <th>
                                <label asp-for="AllAlbumsAsync.FirstOrDefault().Artist"></label>
                            </th>
                            <th>
                                <label asp-for="AllAlbumsAsync.FirstOrDefault().Label"></label>
                            </th>
                            <th>
                                <label asp-for="AllAlbumsAsync.FirstOrDefault().Type"></label>
                            </th>
                            <th>
                                <label asp-for="AllAlbumsAsync.FirstOrDefault().Stock"></label>
                            </th>
                            <th>
                            </th>
                         </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.AllAlbumsAsync)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Artist)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Label)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Stock)
                                </td>

                                <td class="float-right">
                                    <a class="btn btn-success btn-sm text-white" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> Edit album</a>
                                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o"></i> Remove album</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No Album Available.</p>
                }
            </form>
        </div>
    </div>
</body>  
<script>
$(function () {
    $('#dataTable').DataTable({
      "pageLength": 6,
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      'columnDefs': [{ 'orderable': false, 'targets': 5 }],
      'aaSorting': [[0, 'asc']]
      });
  });
</script>
</html>